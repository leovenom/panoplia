<h1>Shots</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shotts.each do |shott| %>
      <tr>
        <td><%= shott.title %></td>
        <td><%= shott.description %></td>
        <td><%= shott.user_id %></td>
        <td><%= link_to 'Show', shott %></td>
        <td><%= link_to 'Edit', edit_shott_path(shott) %></td>
        <td><%= link_to 'Destroy', shott, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>