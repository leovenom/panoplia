<div class="section">
	<div class="container">
		<h1 class="title is-3"><%= @shott.title %></h1>
		<div class="columns">
			<div class="column is-8">
				<span class="by has-text-grey-light">by</span>
				<div class="user-thumb">
					<%= image_tag(current_user.avatar_thumbnail)%>				
				</div>
				<div class="user-name has-text-weight-bold"><%= link_to @shott.user.name %></div>
				<div class="shott-time"><span class="has-text-grey-light">posted</span><span class="has-text-weight-semibold">
					<%= verbose_date(@shott.created_at) %>
				</span></div>
			</div>	
		</div>

		<div class="columns">
			<div class="column is-8">
				<div class="shott-container">
					<div class="shott-full">
						 <%= image_tag @shott.user_shott_url unless @shott.user_shott.blank? %>
					</div>

					<% if user_signed_in? && (current_user.id == @shott.user_id) %>		
						<div class="buttons has-addons">
							<%= link_to 'Edit', edit_shott_path(@shott), class: "button" %>
							<%= link_to 'Delete', shott_path, class: "button", method: :delete, data: { confirm: 'Are you sure you want to delete this shott?'} %>
						</div>
					<% end %>

					<div class="content">
            <%= @shott.description %>
					</div>

					<section class="comments">
						<h2 class="subtitle is-5"><%= pluralize(@shott.comments.count, 'Comment') %></h2>
							<%= render @shott.comments %>
						<hr />
						<% if user_signed_in? %>
							<div class="comment-form">
								<h3 class="subtitle is-3">Leave a reply</h3>
								<%= render 'comments/form' %>
							</div>
						<% else %>
							<div class="content"><%= link_to 'Sign in', new_user_session_path %> to leave a comment.</div>
						<% end %>
					</section>

				</div>
			</div>
			<div class="column is-3 is-offset-1">
				<div class="nav panel show-shott-analytics">
					<div class="panel-block views data">
						<span class="icon"><i class="fa fa-eye"></i></span>
						<%= pluralize(@shott.impressionist_count, 'View') %>
					</div>
					<div class="panel-block comments data">
						<span class="icon"><i class="fa fa-comment"></i></span>
						<%= pluralize(@shott.comments.count, 'Comment') %>
					</div>
					<div class="panel-block likes data">
						<% if user_signed_in? %>
              <% if current_user.liked? @shott %>
                <%= link_to unlike_shott_path(@shott), method: :put, class: "unlike_shott" do %>
                  <span class="icon"><i class="fa fa-heart has-text-primary"></i></span>
                  <span class="vote_count"><%= pluralize(@shott.get_likes.size, 'Like') %></span>
                <% end %>
              <% else %>
                <%= link_to like_shott_path(@shott), method: :put, class: "like_shott" do %>
                  <span class="icon"><i class="fa fa-heart"></i></span>
                  <span class="vote_count"><%= pluralize(@shott.get_likes.size, 'Like') %></span>
                <% end %>
              <% end %>
            <% else %>
                <%= link_to like_shott_path(@shott), method: :put, class: "like_shott" do %>
                  <span class="icon"><i class="fa fa-heart"></i></span>
                  <span class="vote_count"><%= pluralize(@shott.get_likes.size, 'Like') %></span>
                <% end %>
            <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>